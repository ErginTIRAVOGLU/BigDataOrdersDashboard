@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Customer List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content pt-2"> 
<div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Müşteri Listesi
                    <small class="text-muted">Müşteri İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Müşteriler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Müşteri Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row  clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                         <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Ad</th>
                                    <th>Soyad</th>
                                    <th>Email</th>
                                    <th>Telefon</th>
                                    <th>Ülke</th>
                                    <th>Şehir</th>
                                    <th>İlçe</th>
                                    <th>Adres</th>                                    
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var customer in Model)
                                {
                                    <tr>
                                        <td>@customer.CustomerId</td>
                                        <td><img src="@customer.CustomerImageUrl" alt="@customer.CustomerName" width="50" height="50" /></td>
                                        <td>@customer.CustomerName</td>
                                        <td>@customer.CustomerSurname</td>
                                        <td>@customer.CustomerEmail</td>
                                        <td>@customer.CustomerPhone</td>
                                        <td>@customer.CustomerCountry</td>
                                        <td>@customer.CustomerCity</td>
                                        <td>@customer.CustomerDistrict</td>
                                        <td>@customer.CustomerAddress</td>                                      
                                        <td>
                                            <a href="/Customer/DeleteCustomer/@customer.CustomerId" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Customer/UpdateCustomer/@customer.CustomerId" class="btn btn-primary">Düzenle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                         <div class="mt-3 text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">

                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Customer/CustomerList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                                        </li>
                                    }

                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Customer/CustomerList?page=1">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="/Customer/CustomerList?page=@i">@i</a>
                                            </li>
                                        }

                                        if (endPage < ViewBag.TotalPages)
                                        {
                                            if (endPage < ViewBag.TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="/Customer/CustomerList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Customer/CustomerList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                                        </li>
                                    }

                                </ul>
                            </nav>
                        </div>

                        <a href="/Customer/CreateCustomer" class="btn btn-primary">Yeni Müşteri Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>