@model Product
@{
    ViewData["Title"] = "Update Product";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="content pt-2"> 
<div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Ürün Listesi
                    <small class="text-muted">Ürün İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ürünler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Ürün Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row  clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                         <form asp-action="UpdateProduct" method="post">
                            <input type="hidden" asp-for="ProductId" />
                            <div class="form-group">
                                <label for="ProductName">Product Name</label>
                                <input type="text" class="form-control" asp-for="ProductName" placeholder="Enter Product Name" required />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="UnitPrice">Unit Price</label>
                                <input type="number" step="0.01" class="form-control" asp-for="UnitPrice" placeholder="Enter Unit Price" required />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="StockQuantity">Stock Quantity</label>
                                <input type="number" class="form-control" asp-for="StockQuantity" placeholder="Enter Stock Quantity" required />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                           <div class="form-group">
                                <label asp-for="CategoryId" class="control-label">Category</label>
                                <select asp-for="CategoryId" class="form-control show-tick">
                                    <option value="">-- Select Category --</option>
                                    @foreach (var category in ViewBag.Categories as IEnumerable<Category>)
                                    {
                                        <option value="@category.CategoryId">@category.CategoryName</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CountryOfOrigin" class="control-label">Country of Origin</label>
                                <select asp-for="CountryOfOrigin" asp-items="ViewBag.Countries" class="form-control show-tick" required>
                                    <option value="">-- Select Country --</option>
                                </select>
                                <span asp-validation-for="CountryOfOrigin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="Description">Description</label>
                                <textarea class="form-control" asp-for="ProductDescription" placeholder="Enter Description" required></textarea>
                                <span asp-validation-for="ProductDescription" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="ImageUrl">Image URL</label>
                                <input type="text" class="form-control" asp-for="ProductImageUrl" placeholder="Enter Image URL" required />
                                <span asp-validation-for="ProductImageUrl" class="text-danger"></span>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}