@model IEnumerable<Product>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content pt-2"> 
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Ürün Listesi
                    <small class="text-muted">Ürün İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ürünler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Ürün Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row  clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                         <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Resim</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                    <th>Stock</th>
                                    <th>Category</th>
                                    <th>Country</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.ProductId</td>
                                        <td><img src="@product.ProductImageUrl" alt="@product.ProductName" width="50" height="50" /></td>
                                        <td>@product.ProductName</td>
                                        <td>@product.UnitPrice.ToString("C")</td>
                                        <td>@product.StockQuantity</td>
                                        <td>@product.Category.CategoryName</td>
                                        <td>@product.CountryOfOrigin</td>
                                        <td>
                                            <a href="/Product/DeleteProduct/@product.ProductId" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Product/UpdateProduct/@product.ProductId" class="btn btn-primary">Düzenle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                         <div class="mt-3 text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">

                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Product/ProductList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                                        </li>
                                    }

                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Product/ProductList?page=1">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="/Product/ProductList?page=@i">@i</a>
                                            </li>
                                        }

                                        if (endPage < ViewBag.TotalPages)
                                        {
                                            if (endPage < ViewBag.TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link" href="/Product/ProductList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="/Product/ProductList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                                        </li>
                                    }

                                </ul>
                            </nav>
                        </div>

                        <a href="/Product/CreateProduct" class="btn btn-primary">Yeni Ürün Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>