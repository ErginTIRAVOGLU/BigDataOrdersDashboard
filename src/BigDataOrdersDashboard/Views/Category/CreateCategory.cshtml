@model Category
@{
    ViewData["Title"] = "Create Category";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<section class="content pt-2"> 
<div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Ürün Listesi
                    <small class="text-muted">Ürün İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Ürünler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Ürün Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row  clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                         <form asp-action="CreateCategory" method="post">
                            <div class="form-group">
                                <label for="CategoryName">Category Name</label>
                                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Enter Category Name" required />
                                <span asp-validation-for="CategoryName" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}