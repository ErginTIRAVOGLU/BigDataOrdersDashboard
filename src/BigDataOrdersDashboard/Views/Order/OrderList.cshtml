@model IEnumerable<Order>
@{
    ViewData["Title"] = "Order List";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="content pt-2">
    <div class="block-header">
        <div class="row">
            <div class="col-lg-7 col-md-6 col-sm-12">
                <h2>
                    Sipariş Listesi
                    <small class="text-muted">Sipariş İşlemleri Sayfası</small>
                </h2>
            </div>
            <div class="col-lg-5 col-md-6 col-sm-12">
                <ul class="breadcrumb float-md-right">
                    <li class="breadcrumb-item"><a href="index.html"><i class="zmdi zmdi-home"></i> Siparişler</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Sipariş Listesi</a></li>
                    <li class="breadcrumb-item active">Ana Sayfa</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row  clearfix">
            <div class="col-lg-12">
                <div class="card">
                    <div class="body">
                        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Product Name</th>
                                    <th>Customer Name</th>
                                    <th>Quantity</th>
                                    <th>Payment Method</th>
                                    <th>Order Status</th>
                                    <th>Order Date</th>
                                    <th>Order Note</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.Product.ProductName</td>
                                        <td>@order.Customer.CustomerName</td>
                                        <td>@order.Quantity</td>
                                        <td>@order.PaymentMethod</td>
                                        <td>@order.OrderStatus</td>
                                        <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                                        <td>@order.OrderNotes</td>
                                        <td>
                                            <a href="/Order/DeleteOrder/@order.OrderId" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Order/UpdateOrder/@order.OrderId" class="btn btn-primary">Düzenle</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="mt-3 text-center">
                            <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-center">

                                    @if (ViewBag.CurrentPage > 1)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="/Order/OrderList?page=@(ViewBag.CurrentPage - 1)">Önceki</a>
                                        </li>
                                    }

                                    @{
                                        int startPage = Math.Max(1, ViewBag.CurrentPage - 2);
                                        int endPage = Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2);

                                        if (startPage > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Order/OrderList?page=1">1</a>
                                            </li>
                                            if (startPage > 2)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                        }

                                        for (int i = startPage; i <= endPage; i++)
                                        {
                                            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                                                <a class="page-link" href="/Order/OrderList?page=@i">@i</a>
                                            </li>
                                        }

                                        if (endPage < ViewBag.TotalPages)
                                        {
                                            if (endPage < ViewBag.TotalPages - 1)
                                            {
                                                <li class="page-item disabled">
                                                    <span class="page-link">...</span>
                                                </li>
                                            }
                                            <li class="page-item">
                                                <a class="page-link"
                                                    href="/Order/OrderList?page=@ViewBag.TotalPages">@ViewBag.TotalPages</a>
                                            </li>
                                        }
                                    }

                                    @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                    {
                                        <li class="page-item">
                                            <a class="page-link"
                                                href="/Order/OrderList?page=@(ViewBag.CurrentPage + 1)">Sonraki</a>
                                        </li>
                                    }

                                </ul>
                            </nav>
                        </div>

                        <a href="/Order/CreateOrder" class="btn btn-primary">Yeni Sipariş Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>